import numpy as np
import matplotlib.pyplot as plt


x = np.array([185, 170, 168, 179, 182, 188])
y = np.array([72, 56, 60, 68, 72, 77])

# Número de clústeres (k)
k = 2

# Función para calcular la distancia euclidiana entre dos puntos
def distancia_euclidiana(point1, point2):
    return np.sqrt((point1[0] - point2[0]) ** 2 + (point1[1] - point2[1]) ** 2)

# Inicialización de centroides
centroides_x = [185, 72]
centroides_y = [170, 56]
centroides = list(zip(centroides_x, centroides_y))

# Algoritmo K-Means
max_iterations = 100
for iteration in range(max_iterations):
    # Inicializar clusters vacíos - Para que haya un cluster para cada uno de los centroides
    clusters = [[] for _ in range(k)]

    # Asignar puntos a clústeres
    for i in range(len(x)):
        point = (x[i], y[i])
        #Calculamos la distancia euclidiana entre el punto actual y los centroides anteriores
        distances = [distancia_euclidiana(point, centroides) for centroides in centroides]
        #Encontrando el índice del cluster al que pertenece el punto, que corresponde
        #Al índice del centroide más cercano
        cluster_index = np.argmin(distances)
        #Agregamos el punto al cluster al que corresponde
        clusters[cluster_index].append(point)
        print("------------------------------------------------------------")
        #print("\n")
        print("Cluster: ", cluster_index, "Punto:  ", point, "\n")

    # Calcular nuevos centroides como el promedio de los puntos en cada cluster
    new_centroides = [np.mean(cluster, axis=0) for cluster in clusters]

    # Verificar convergencia/ Si ha convergido sale del bucle
    if np.array_equal(centroides, new_centroides):
        break
    centroides = new_centroides


# Imprimir resultados
for i in range(k):
    print(f'Cluster {i + 1}:')
    for point in clusters[i]:
        print(point)

#print("NUEVOS CENTROIDEEEEEES", new_centroides)
